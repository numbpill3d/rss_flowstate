{
  "name": "retro-rss-aggregator",
  "version": "1.0.0",
  "description": "A Windows 98 style RSS feed aggregator built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["electron", "rss", "aggregator", "retro", "windows98"],
  "author": "RSS Aggregator",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.retrorsss.aggregator",
    "productName": "Retro RSS Aggregator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "package.json"
    ]
  }
}
